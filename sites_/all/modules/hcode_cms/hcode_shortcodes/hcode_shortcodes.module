      $attrs['class'] .= (isset($attrs['color']) && $attrs['type'] == 'i-rounded i-3d-border' ? ' ' . $attrs['color'] : '');
  }
  
  /*if(isset($attrs['icon_style']) && $attrs['icon_style'] == 'default'){
